<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="EZTutor.Data.Local" assembly="EZTutor.Data.Local">
	<class name="Lectures,Data.Local" table="Lectures" lazy="true">

		<!-- Primary Key(s) -->
		<id name="Lectureid" column="LectureID" type="Guid">
			<generator class="assigned"/>
		</id>
		
		<!-- Properties -->
		<property column="LectureName" type="string" name="LectureName" not-null="true" />
		<property column="LectureWeek" type="int" name="LectureWeek" not-null="true" />
    <bag name="FkSlidesLectures" inverse="true" lazy="true" cascade="all">
      <key column="LectureID" />
      <one-to-many class="EZTutor.Data.Local.Slides,EZTutor.Data.Local" />
    </bag>
	</class>
</hibernate-mapping>
