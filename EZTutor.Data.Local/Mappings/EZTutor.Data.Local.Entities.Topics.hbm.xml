<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true" namespace="EZTutor.Data.Local" assembly="EZTutor.Data.Local">
	<class name="Topics,Data.Local" table="Topics" lazy="true">

		<!-- Primary Key(s) -->
		<id name="Topicid" column="TopicID" type="Guid">
			<generator class="assigned"/>
		</id>
		
		<!-- Properties -->
		<property column="TopicName" type="string" name="TopicName" not-null="true" />
    <bag name="FkSlidesTopics" inverse="true" lazy="true" cascade="all">
      <key column="TopicID" />
      <one-to-many class="EZTutor.Data.Local.Lecture.Slides,EZTutor.Data.Lecture" />
    </bag>
	</class>
</hibernate-mapping>
