<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="EZTutor.Data.Remote" namespace="EZTutor.Data.Remote.Entities" >
  <class name="Lectures" table="Lectures" lazy="true">
    <id name="Lectureid" column="LectureID" type="Guid">
      <generator class="assigned" />
    </id>
    <property type="string" not-null="true" name="LectureName" column="[LectureName]" />
    <property type="int" not-null="true" name="LectureWeek" column="[LectureWeek]" />
    <bag name="FkSlidesLectures" inverse="true" lazy="true" cascade="all">
      <key column="LectureID" />
      <one-to-many class="Slides" />
    </bag>
  </class>
</hibernate-mapping>